{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm ci && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": -1,
    "restartPolicyMaxRetryDurationSeconds": 0,
    "startCommand": "npm run worker",
    "processType": "worker"
  }
}
